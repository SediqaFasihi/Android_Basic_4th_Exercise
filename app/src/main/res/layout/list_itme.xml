<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="0dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imag_view"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:src="@mipmap/person_1"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/first_app_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imag_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/Mediom_dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="@dimen/app_big_text"
        tools:text=" The name of person" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/second_app_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_app_txt"
        android:layout_toEndOf="@id/imag_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="@dimen/app_big_text"
        tools:text=" The last name is" />

    <!--    <ImageView-->
    <!--        android:id="@+id/image"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="match_parent"-->
    <!--        />-->
</RelativeLayout>